@model PagedList.IPagedList<Teman_ApotikProj.Models.Obat>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
}

<h2>Obat</h2>

<p class="navbar-right">
    @Html.ActionLink("Buat Data Baru", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Cari berdasarkan nama obat : @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Kode Obat", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.DisplayName("Nama Obat")
        </th>
        <th>
            @Html.ActionLink("Jenis Obat", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kode_Obat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nama_Obat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JenisObat.Jenis_Obat)
            </td>
            <td>
                @Html.ActionLink("Ubah", "Edit", new { id = item.Id_Obat }) |
                @Html.ActionLink("Detail", "Details", new { id = item.Id_Obat }) |
                @Html.ActionLink("Hapus", "Delete", new { id = item.Id_Obat })
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))