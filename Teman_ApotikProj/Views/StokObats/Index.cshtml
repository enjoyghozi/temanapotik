@model PagedList.IPagedList<Teman_ApotikProj.Models.StokObat>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="navbar-right">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ID Jenis Obat")
        </th>
        <th>
            @Html.ActionLink("Stok Obat", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Kode Obat", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.id_Jenis_Obat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock_In_Hand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obat.Kode_Obat)
            </td>
            <td>
                @Html.ActionLink("Ubah", "Edit", new { id = item.Id_Stok_Obat }) |
                @Html.ActionLink("Detail", "Details", new { id = item.Id_Stok_Obat }) |
                @Html.ActionLink("Hapus", "Delete", new { id = item.Id_Stok_Obat })
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
