@model PagedList.IPagedList<Teman_ApotikProj.Models.Pasien>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p class="navbar-right">
    @Html.ActionLink("Buat Baru", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Cari berdasarkan Nama Pasien : @Html.TextBox("SearchString")
        <input type="submit" value="Cari" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nama Pasien")
        </th>
        <th>
            @Html.DisplayName("Alamat Pasien")
        </th>
        <th>
            @Html.DisplayName("Diagnosa Penyakit")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nama_Pasien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat_Pasien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diagnosa_Penyakit)
            </td>
            <td>
                @Html.ActionLink("Ubah", "Edit", new { id = item.Id_Pasien }) |
                @Html.ActionLink("Detail", "Details", new { id = item.Id_Pasien }) |
                @Html.ActionLink("Hapus", "Delete", new { id = item.Id_Pasien })
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
